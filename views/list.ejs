<%- include("header")-%>
        <div class="box" id="heading">
            <h1><%= listTitle %></h1>
        </div>
        
        <div class="box">
            <% for(var i=0; i<newListItems.length; i++){ %>
                <form action="/delete" method="post">
                    <div class="item">
                        <input type="checkbox" name="cBox" value="<%= newListItems[i]._id %>" onChange="this.form.submit()">
                        <p style="color:#A683E3"><%= newListItems[i].name %></p>
                    </div>           
                    <input type="hidden" name="listName" value="<%=listTitle %>" id=""> </form>
                </form>
            <%  }  %>
            <form class="item" action="/" method="post">         
                <input type="text" name="newItem" placeholder="New Item" autocomplete="off" required>
                <button type="submit" name="submit" value=<%= listTitle %>>+</button>
               </form>
        </div>
       
         
 <%- include("footer")-%>